extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Conversor de TOML para XML
        img(src="/images/TopG.png" alt="Top G!" width="70" height="70" onclick='showFile(\"TopG.png\", \"image/png\")')

    .modal(id="display")

    center  
      a.w3-margin(href="/paraJSON") JSON
        img(src="/images/json.png" alt="JSON icon" width="30" height="30")
      a.w3-margin(href="/paraYAML") YAML
        img(src="/images/yaml.png" alt="YAML icon" width="50" height="30")
      a.w3-margin(href="/paraXML") XML
        img(src="/images/xml.png" alt="XML icon" width="30" height="30")
    
    if erros 
      .w3-panel.w3-red
        h3 Erro!
        p= erros

    .w3-container.w3-margin
      .w3-border.w3-border#left
        form.w3-container(action="/convertXML" method="POST")
          label TOML
          fieldset
            if toml
              textarea#toml(name="toml" cols="30" rows="30") #{toml}
            else
              textarea#toml(name="toml" cols="30" rows="30")

          input.w3-btn.w3-blue.w3-margin(type="submit" value="Converter!")

      .w3-container#seta 
        center
          img(src="/images/seta.png" alt="seta" width="50" height="30")

      .w3-border.w3-border#right
        .w3-container
          label XML
          fieldset 
            if xml
              textarea#xml(name="xml" cols="30" rows="10" readonly) #{xml}
            else
              textarea#xml(name="xml" cols="30" rows="10" readonly) 

    footer.w3-container.w3-blue
      address Generated by #[b Free Top G] at #{d} | #[a(href="/") Go back to home!]