extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Seja Bem-Vindo ao conversor de TOML
        img(src="/images/TopG.png" alt="Top G!" width="70" height="70" onclick='showFile(\"TopG.png\", \"image/png\")')
    
    h2 Escolha uma das seguintes opções: 

    .modal(id="display")
    center  
      a.w3-margin(href="/paraJSON") para JSON
        img(src="/images/json.png" alt="JSON icon" width="30" height="30")
      hr
      a.w3-margin(href="/paraYAML") para YAML
        img(src="/images/yaml.png" alt="YAML icon" width="50" height="30")
      hr
      a.w3-margin(href="/paraXML") para XML
        img(src="/images/xml.png" alt="XML icon" width="30" height="30")

    footer.w3-container.w3-blue
      address Generated by #[b Free Top G] at #{d}
